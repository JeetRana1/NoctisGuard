{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "handle": "filesystem" },
    { "src": "^/(.*)$", "dest": "/$1" }
  ],
  "cleanUrls": true
}
